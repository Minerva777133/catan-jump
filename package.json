{
  "name": "catan-jump",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "preview": "vite preview --host",
    "build:electron": "vite build --base=./",
    "start:electron": "npm run build:electron && electron .",
    "dist": "npm run build:electron && electron-builder"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.catanjump",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
